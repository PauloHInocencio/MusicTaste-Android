<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >

    <!-- Album Image -->
    <ImageView
        android:id="@+id/album_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp" />

    <!-- Music Name -->
    <TextView
        android:id="@+id/music_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/album_image"
        android:layout_toEndOf="@+id/album_image"
        android:textSize="17sp"
        android:textStyle="bold" />

    <!-- Artist Name -->
    <TextView
        android:id="@+id/artist_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_name_text"
        android:layout_marginTop="1dip"
        android:layout_toEndOf="@+id/album_image"
        android:textSize="15sp" />


    <!-- Album name -->
    <TextView
        android:id="@+id/album_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist_name_text"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/album_image"
        android:textColor="@color/album_name"
        android:textSize="13sp" />

    <!-- Music gender -->
    <!--<TextView
        android:id="@+id/music_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/music_gender"
        android:textSize="12sp" />-->

</RelativeLayout>